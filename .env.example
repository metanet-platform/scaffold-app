# ============================================
# METANET SCAFFOLD - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ----------------
# Appwrite Config
# ----------------
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=691b539c001abbd9caed
VITE_APPWRITE_API_KEY=standard_21e3d51e4526f83cff4f28e4b135db3f558865f3b08d62852e46bb05c0e1677c7ac2012c33c1255d6c8be047a818bc239261708d03cebae8bec470253ddfc84f3db4845c00757ab3f7b7b778886781ea82905c5bc9c86e70a742916f48e954680cae19e565fb711276a37f313db17ae1fcdfffae5ee9cf34085d2f35d11754eb

# Appwrite Database & Collections
DATABASE_ID=main_database
USERS_COLLECTION_ID=users
CONTENT_COLLECTION_ID=content
ROLES_COLLECTION_ID=roles

# ----------------
# Bunny CDN Config
# ----------------
# Storage Zone name in Bunny CDN
VITE_BUNNY_STORAGE_ZONE=your-storage-zone
# Public access key (safe for frontend)
VITE_BUNNY_ACCESS_KEY=your-bunny-access-key
# CDN hostname (where files are served from)
VITE_BUNNY_HOSTNAME=your-cdn-hostname.b-cdn.net

# BACKEND ONLY - Never expose these in frontend!
# These are used by Appwrite functions to generate upload URLs
BUNNY_STORAGE_PASSWORD=your-storage-password
BUNNY_STORAGE_REGION=de

# ----------------
# Metanet Platform
# ----------------
# These are auto-filled by dfx deploy
VITE_CANISTER_ID_METANET_SCAFFOLD_BACKEND=
VITE_CANISTER_ID_METANET_SCAFFOLD_FRONTEND=

# DFX Network (local or ic)
DFX_NETWORK=local

# ----------------
# App Configuration
# ----------------
VITE_APP_NAME=Metanet Scaffold App
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=en

# Feature Flags
VITE_ENABLE_VIDEO_UPLOAD=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_NOTIFICATIONS=true

# ----------------
# Role-Based Access Control
# ----------------
# Define your app's role hierarchy (comma-separated)
VITE_ROLES=user,moderator,admin
VITE_DEFAULT_ROLE=user

# ----------------
# Security
# ----------------
# Max file upload size in bytes (default: 50MB)
VITE_MAX_FILE_SIZE=52428800
# Max video upload size in bytes (default: 500MB)
VITE_MAX_VIDEO_SIZE=524288000

# Session timeout in milliseconds (default: 24 hours)
VITE_SESSION_TIMEOUT=86400000

# ----------------
# Development
# ----------------
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true
